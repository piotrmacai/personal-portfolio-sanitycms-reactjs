# Enable URL rewriting
RewriteEngine On
RewriteBase /

# Prevent direct access to index.html or API files
RewriteRule ^index\.html$ - [L]
RewriteRule ^api/ - [L]

# Check if the requested file or directory exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect all other requests to index.html for React routing
RewriteRule ^ /index.html [L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Caching headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access 1 minute"
    ExpiresByType text/css "access 1 week"
    ExpiresByType application/javascript "access 1 week"
    ExpiresByType image/x-icon "access 1 year"
    ExpiresByType image/jpeg "access 1 month"
    ExpiresByType image/png "access 1 month"
    ExpiresByType image/gif "access 1 month"
    ExpiresByType application/json "access 1 week"
    ExpiresByType application/xml "access 1 week"
    ExpiresByType text/plain "access 1 week"
</IfModule>

# Disable directory browsing
Options -Indexes

# Allow cross-origin requests (CORS) if needed
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>